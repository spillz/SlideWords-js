<MultiplayerMenu>:
    hints: {center_x:0.5, center_y:0.5, h:null, w:0.8}
    id: 'multiplayerMenu'
    orientation: 'vertical'
    player1: 1
    player2: 1
    players: ['','Human', 'AI']
    selection: ''
    paddingX: '0.01'
    paddingY: '0.01'
    spacingY: '0.01'
    spacingX: '0.01'
    bgColor: resources['colors']['background']
    MenuItem:
        text: 'Start Game'
        on_press:
            this.parent.selection = 'multiplayerGame'
    MenuItem:
        text: multiplayerMenu.players[multiplayerMenu.player1]
        on_press:
            this.parent.selection = 'player1'
    MenuItem:
        text: multiplayerMenu.players[multiplayerMenu.player2]
        on_press:
            this.parent.selection = 'player2'


<LeaderboardMenu>:
    hints: {center_x:0.5, center_y:0.5, h:null, w:0.8}
    orientation: 'vertical'
    selection: ''
    bgColor: resources['colors']['background']
    paddingX: '0.01'
    paddingY: '0.01'
    spacingY: '0.01'
    spacingX: '0.01'
    MenuItem:
        text: 'High Score'
        on_press:
            this.parent.selection = 'highScore'
    MenuItem:
        text: 'Daily Game High Score'
        on_press:
            this.parent.selection = 'dailyHighScore'
    MenuItem:
        text: 'Number of 1,000+ Games'
        on_press:
            this.parent.selection = 'number1000'
